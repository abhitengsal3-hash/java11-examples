

pipeline {
    agent any

    tools {
        jdk 'openjdk'
        maven 'maven'
    }

    stages {
        stage('Clone') {
            steps {
                git branch: 'master', url: 'https://github.com/abhitengsal3-hash/java11-examples.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
            }
        }
    }

    post {
        success {
            echo "Build succeeded!"
        }
        failure {
            echo "Build failed!"
        }
    }
}

