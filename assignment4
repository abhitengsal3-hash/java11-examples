

pipeline {
    agent any

    triggers {
        githubpush()
    }

    tools {
        jdk 'openjdk'      // must exist in Jenkins
        maven 'maven'      // must exist in Jenkins
    }

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/abhitengsal3-hash/java11-examples.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
            }
        }
    }
}

